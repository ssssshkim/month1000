<% flash.each do |type,msg| %>
	<% if msg.is_a? String %>
		<div class="alert alert-<%= type.to_s == "notice" ? "success" : "danger" %>
			<%= content_tag(:span, msg, :id => "flash") %>
			<button type="button" class="close" data-dismiss="alert" aria-hidden="true">x</button>
		</div>
	<% end %>
<% end %>
